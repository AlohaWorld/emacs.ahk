  return
}
^v::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
    scroll_down()
  return
}
!v::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
    scroll_up()
  return
}
h::  ;Ctrl-x,h  bind to select_all
{
  global
  if is_target(){
    Send "h"
  } else if (is_pre_x) {
      select_all()
  } else {
      Send "h"
  }
  return
}

k::  ;Ctrl-x, k bind to kill_buffer
{
  global
  if is_target(){
    Send "k"
  } else if (is_pre_x) {
      kill_buffer()
  } else {
      Send "k"
  }
  return
}