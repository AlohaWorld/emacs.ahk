  return
}
^s::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
  {
    if is_pre_x
      save_buffer()
    else
      isearch_forward()
  }
  return
}
^r::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
    isearch_backward()
  return
}
^w::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
    kill_region()
  return
}
!w::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
    kill_ring_save()
  return
}
^y::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
    yank()
  return
}
^/::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
    undo()
  return  
}  
;$^{Space}::
;^vk20sc039::
^vk20::
{
  global
  if is_target()
    Send "{CtrlDown}{Space}{CtrlUp}"
  else
  {
    if is_pre_spc
      is_pre_spc := 0
    else
      is_pre_spc := 1
  }
  return
}
^@::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
  {
    if is_pre_spc
      is_pre_spc := 0
    else
      is_pre_spc := 1
  }
  return
}
^a::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
    move_beginning_of_line()
  return
}
^e::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
    move_end_of_line()
  return
}
^p::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
    previous_line()
  return
}
^n::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
    next_line()
  return
}
^b::
{
  global
  if is_target()
    Send %A_ThisHotkey%
  else
